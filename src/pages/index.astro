<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lara's Bookshelf</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <div class="container">
      <h1>Lara's Bookshelf</h1>
      <div class="book-grid">
        {
          book.map((book, index) => (
            <a href={book.url} class="book-card" id={`book-card-${index}`} target="_blank">
              <div class="book-cover-wrapper">
                <img src={book.image} alt={book.title} class="book-cover" />
                <div class="summary">{book.summary}</div>
              </div>
              <div class="book-info">
                <h2>{book.title}</h2>
                <p class="author">Author: {book.author}</p>
                <p class="rating">Rating: {book.rating}</p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </body>
</html>
